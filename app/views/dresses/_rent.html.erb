<% if current_user != @dress.user %>
  <%= form_tag dress_dress_rentals_path [@dress, @dress_rental] do %>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
               data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
               data-description="<%= DressRental::DESCRIPTION %>"
               data-email="<%= current_user.email %>"
               data-amount="<%= @cost %>">
               </script>

  <% end %>
<% end %>


    